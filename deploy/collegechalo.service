[Unit]
Description=College Chalo Next.js Application
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/collegechalo-website
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
Environment="NODE_ENV=production"
Environment="PORT=3000"

# Resource limits
LimitNOFILE=65536
LimitNPROC=512

# Restart policies
StartLimitInterval=600
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
